# Apache configuration for NearlyFreeSpeech PHP deployment

# Set default file
DirectoryIndex index.php index.html

# Rewrite API routes to PHP files (only if mod_rewrite is enabled)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Rewrite /api/define to /api/define.php
    RewriteRule ^api/define/?$ api/define.php [L]
    
    # Rewrite /api/chat to /api/chat.php
    RewriteRule ^api/chat/?$ api/chat.php [L]
    
    # Rewrite /api/search to /api/search.php
    RewriteRule ^api/search/?$ api/search.php [L]
</IfModule>
